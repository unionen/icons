{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "lib": ["ES2021", "dom"],
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "declaration": false,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "preserve",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}